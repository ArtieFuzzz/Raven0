{
  "name": "raven0",
  "version": "Hasura",
  "description": "A discord bot made in TypeScript.",
  "main": "build/index.js",
  "private": true,
  "author": "Raven0 (https://gitlab.com/raven0-bot)",
  "contributors": [
    "ArtieFuzzz <jardenz.den@gmail.com> (https://artiefuzzz.is-a.dev)"
  ],
  "engines": {
    "node": ">=15.0.0"
  },
  "scripts": {
    "start": "node .",
    "start:windows": "./scripts/update.bat",
    "start:linux": "./scripts/update.sh",
    "prod": "cd build && node shard",
    "dev": "node build/index",
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc -p ./",
    "test": "npm run lint src/",
    "lint": "eslint --cache --report-unused-disable-directives --ext .js,.ts --ignore-path .gitignore",
    "lint:fix": "npm run lint src/ --fix",
    "clean": "rimraf ./build && mkdir build",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prettiest": "prettier --write . && yarn run lint:fix",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@aero/centra": "^1.0.6",
    "@ksoft/api": "^3.1.9",
    "@sentry/node": "^6.8.0",
    "@tmware/status-rotate": "^1.2.2",
    "app-root-path": "^3.0.0",
    "convict": "^6.0.1",
    "countapi-js": "^1.0.2",
    "dayjs": "^1.8.36",
    "discord-akairo": "^8.1.0",
    "discord.js": "12.5.3",
    "dotenv": "^8.6.0",
    "moment": "^2.29.1",
    "moment-duration-format": "^2.3.2",
    "mongoose": "^5.13.0",
    "owoifyx": "^1.0.1",
    "pm2": "^5.1.0",
    "srod-v2": "^1.0.2",
    "sxcu.js": "^1.0.1",
    "uwuifier": "^3.0.4",
    "yiff": "^3.1.2"
  },
  "devDependencies": {
    "@tmuniversal/ts": "^1.1.2",
    "@tmware/eslint-config": "^1.1.2",
    "@tmware/eslint-config-typescript": "^1.0.5",
    "@tmware/prettier-config": "^1.0.3",
    "@tmware/semantic-release-npm-github-publish": "^1.4.2",
    "@types/app-root-path": "^1.2.4",
    "@types/convict": "^6.0.1",
    "@types/debug": "^4.1.5",
    "@types/moment-duration-format": "^2.2.2",
    "@types/node": "^14.17.4",
    "@types/ws": "^7.4.5",
    "eslint": "^7.29.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "keywords": [
    "discord",
    "discord.js",
    "bot",
    "discord",
    "bot"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://gitlab.com/raven0-bot/Raven/-/issues"
  },
  "homepage": "https://gitlab.com/Raven/0-bot/Raven",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@tmware/prettier-config"
}
