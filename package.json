{
  "name": "raven0",
  "version": "Sōryū",
  "description": "A template for discord bots in typescript.",
  "main": "build/index.js",
  "private": true,
  "engines": {
    "node": ">=15.0.0"
  },
  "scripts": {
    "start": "node .",
    "start:windows": "./scripts/update.bat",
    "start:linux": "./scripts/update.sh",
    "prod": "NODE_ENV=\"production\" yarn start",
    "build": "npm run clean && npm run build:ts",
    "build:ts": "tsc -p ./",
    "test": "npm run lint src/",
    "lint": "eslint --cache --report-unused-disable-directives --ext .js,.ts --ignore-path .gitignore",
    "lint:fix": "npm run lint src/ --fix",
    "clean": "rimraf ./build && mkdir build",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prettiest": "prettier --write . && yarn run lint:fix",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@aero/centra": "^1.0.6",
    "@ksoft/api": "^3.1.9",
    "@raven0-bot/cryption": "^1.0.3",
    "@supabase/postgrest-js": "^0.28.3",
    "@tmware/status-rotate": "^1.2.2",
    "app-root-path": "^3.0.0",
    "convict": "^6.0.1",
    "countapi-js": "^1.0.2",
    "discord-akairo": "^8.1.0",
    "discord.js": "12.5.3",
    "dotenv": "^8.2.0",
    "moment": "^2.29.1",
    "moment-duration-format": "^2.3.2",
    "owoifyx": "^1.0.1",
    "pm2": "^4.5.6",
    "srod-v2": "^1.0.2",
    "store": "github:thattonybo/store",
    "sxcu.js": "^1.0.1",
    "uwuifier": "^3.0.0",
    "yiff": "2.0.3"
  },
  "devDependencies": {
    "@tmuniversal/ts": "^1.1.2",
    "@tmware/eslint-config": "^1.1.2",
    "@tmware/eslint-config-typescript": "^1.0.5",
    "@tmware/prettier-config": "^1.0.3",
    "@tmware/semantic-release-npm-github-publish": "^1.4.2",
    "@types/app-root-path": "^1.2.4",
    "@types/convict": "^6.0.1",
    "@types/debug": "^4.1.5",
    "@types/moment-duration-format": "^2.2.2",
    "@types/node": "^14.14.37",
    "@types/ws": "^7.4.1",
    "eslint": "^7.23.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.2.0",
    "typescript": "^4.2.4"
  },
  "keywords": [
    "discord",
    "discord.js",
    "bot",
    "discord",
    "bot"
  ],
  "authors": {
    "TMUniversal": "(Template) https://github.com/TMUniversal/discord-bot-template.git",
    "ArtieFuzzz (#8298)": "(Developer) @ https://gitlab.com/raven0-bot"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/raven0-bot/Raven/-/issues"
  },
  "homepage": "https://gitlab.com/Raven/0-bot/Raven",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@tmware/prettier-config"
}
